% Set the assignment number.
\newcommand{\assignment}[1]{\title{Assignment #1}}

% Start a new exercise.
\newcommand{\exercise}[1]
{
    \setlength{\parindent}{0pt}
    \section{Exercise #1}    
}

% Describe an exercise
\newenvironment{exercise-description}%
{\begin{bfseries}}%
{\end{bfseries}\\}